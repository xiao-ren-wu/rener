<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rener.portal.dao.TbRedDetailMapper">
    <!--通过用户id统计红包个数-->
    <select id="countRedPacket" resultType="Integer" parameterType="Long">
        SELECT COUNT(red_detail_id) FROM tb_red_detail WHERE user_id=#{userId}
    </select>
</mapper>